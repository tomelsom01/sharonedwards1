  <div class="container mt-2 pb-4">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12 col-12 contactcard">
        <p>Please complete the form and we can email you, or give you a call, so you can ask us any questions you might have.</p>
        <p>We look forward to hearing from you.</p>
        <p>T: 07484 782 713</p>
        <p>E: brisbanephysio@hotmail.co.uk</p>
      </div>
      <div class="contactform col-lg-6 col-md-6 col-sm-12 col-12">
        <%= form_with model: @contact, url: contacts_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', placeholder: "enter name" %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control', placeholder: "joebloggs@email.com" %>
          </div>
          <div class="form-group">
            <%= f.label :phone %>
            <%= f.text_field :phone, class: 'form-control', placeholder: "0712-345-5678" %>
          </div>
          <div class="form-group pb-2">
            <%= f.label :message %>
            <%= f.text_area :message, class: 'form-control', placeholder: "enter a short message" %>
          </div>
          <%= f.submit 'Send', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
  <% if @contact.errors.any? %>
    <div class="alert alert-danger">
      <h4>There were some errors with your submission:</h4>
      <ul>
        <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
