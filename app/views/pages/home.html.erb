            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', placeholder: "enter name" %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control', placeholder: "joebloggs@email.com" %>
          </div>
          <div class="form-group">
            <%= f.label :phone %>
            <%= f.text_field :phone, class: 'form-control', placeholder: "0712-345-5678" %>
          </div>
          <div class="form-group pb-2">
            <%= f.label :message %>
            <%= f.text_area :message, class: 'form-control', placeholder: "enter a short message" %>
          </div>
          <%= f.submit 'Send', class: "button-36" %>
